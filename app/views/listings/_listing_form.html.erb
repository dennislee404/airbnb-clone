<%= form_with model: @listing do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br><br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br><br>
	<%= f.label :rooms %>
	<%= f.number_field :rooms %>
	<br><br>
	<%= f.label :capacity %>
	<%= f.number_field :capacity %>
	<br><br>
	<%= f.label :availability %>
	<%= f.check_box :availability %>
	<br><br>
	<%= f.label :property_type %>
	<%= f.select(:property_type, Listing::PROPERTY_TYPES, include_blank: true) %>
	<br><br>
	<%= f.label :price %>
	<%= f.number_field :price %>
	<br><br>
	<%= f.label :location %>
	<%= f.text_field :location %>
	<br><br>
	<%= f.label :photos %>
	<%= f.file_field :photos, multiple: true %>	
	<% if @listing.new_record? %>
		<%= f.submit 'Create Listing' %>
	<% else %>
		<%=	f.submit 'Update Listing' %>
	<% end %>
<% end %>